### Scratchpad
bindsym $win+Shift+minus move scratchpad
bindsym $win+minus scratchpad show
bindsym $win+Shift+m move workspace to output left

############## Keybinds
floating_modifier $alt
bindsym $alt+Shift+0 exec $HOME/bin/kbtoggle.sh
bindsym $win+Return exec terminator
bindsym $win+c kill
bindsym $alt+p exec dmenu_run
bindsym $win+Shift+i exec firefox
bindsym XF86HomePage exec firefox
bindsym $win+$esc exec i3lock -c 000000

############## Font
font pango:Source Code Pro, Awesome 15


############## Window Manipulation

# change focus
bindsym $alt+h focus left
bindsym $alt+j focus down
bindsym $alt+k focus up
bindsym $alt+l focus right

# move focused window
bindsym $alt+Shift+h move left
bindsym $alt+Shift+j move down
bindsym $alt+Shift+k move up
bindsym $alt+Shift+l move right

# split in vertical and horizontal orientation
bindsym $alt+g split h
bindsym $alt+v split v

bindsym $alt+f fullscreen

# Switch between layouts
bindsym $alt+apostrophe layout stacking
bindsym $alt+comma layout tabbed
bindsym $alt+period layout toggle split

bindsym $alt+Shift+space floating toggle
bindsym $alt+space focus mode_toggle
bindsym $alt+a focus parent

# focus the child container
#bindsym $alt+d focus child

# switch to workspace
bindsym $alt+$f1 workspace $WS1
bindsym $alt+$f2 workspace $WS2
bindsym $alt+$f3 workspace $WS3
bindsym $alt+$f4 workspace $WS4
bindsym $alt+$f5 workspace $WS5
bindsym $alt+$f6 workspace $WS6
bindsym $alt+$f7 workspace $WS7
bindsym $alt+$f8 workspace $WS8
bindsym $alt+$f9 workspace $WS9
bindsym $alt+$f10 workspace $WS10
bindsym $alt+KP_7 workspace KP1
bindsym $alt+KP_8 workspace KP2

# move focused container to workspace
bindsym $alt+Shift+$f1 move container to workspace $WS1
bindsym $alt+Shift+$f2 move container to workspace $WS2
bindsym $alt+Shift+$f3 move container to workspace $WS3
bindsym $alt+Shift+$f4 move container to workspace $WS4
bindsym $alt+Shift+$f5 move container to workspace $WS5
bindsym $alt+Shift+$f6 move container to workspace $WS6
bindsym $alt+Shift+$f7 move container to workspace $WS7
bindsym $alt+Shift+$f8 move container to workspace $WS8
bindsym $alt+Shift+$f9 move container to workspace $WS9
bindsym $alt+Shift+$f10 move container to workspace $WS10
bindsym $alt+Shift+KP_7 move container to workspace KP1
bindsym $alt+Shift+KP_8 move container to workspace KP2


# Assign to workspace

assign [class="(?i)thunderbird"] → $WS2
assign [class="(?i)firefox"] → $WS5
assign [class="(?i)chrome"] → $WS6

# reload the configuration file
bindsym $alt+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $alt+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $alt+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $alt+r mode "resize"

