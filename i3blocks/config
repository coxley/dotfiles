# vim: set ft=dosini:

[time]
command=date '+%D %T'
interval=1

[volume-pulseaudio]
command=~/.config/i3blocks/custom/volume-pulseaudio
interval=once
signal=1

[batterybar]
command=$SCRIPT_DIR/batterybar
label=bat:
interval=5
markup=pango
min_width=bat: ■■■■■

[wifi]
command=$SCRIPT_DIR/wifi
instance=wlp4s0
label=
interval=5

[key_layout]
label=Layout
interval=30
command=$SCRIPT_DIR/key_layout

[displays]
command=$SCRIPT_DIR/displays
interval=3
